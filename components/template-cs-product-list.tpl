:root {
  /* VoogStyle
    "pathI18n": ["product_list"],
    "titleI18n": "max_nr_of_columns",
    "editor": "listPicker",
    "list": {{ base_number_of_columns_set }},
    "featured": true,
    "scope": "global"
  */
  --product-list-box-width: 33.3%;
  /* VoogStyle
    "pathI18n": ["product_list", "article_box"],
    "titleI18n": "image_radius",
    "editor": "rangePicker",
    "min": 0,
    "max": 100,
    "step": 1,
    "unit": "%",
    "scope": "global"
  */
  --product-box-image-radius: 0;
  /* VoogStyle
    "pathI18n": ["product_list", "article_box", "normal"],
    "titleI18n": "line_height",
    "editor": "rangePicker",
    "min": 1,
    "max": 5,
    "step": 0.1,
    "unit": "",
    "scope": "global"
  */
  --product-box-line-height: 1.2;
  /* VoogStyle
    "pathI18n": ["product_list", "article_box", "normal"],
    "titleI18n": "size",
    "editor": "rangePicker",
    "min": 10,
    "max": 50,
    "unit": "px",
    "featured": true,
    "scope": "global"
  */
  --product-box-font-size: 18px;
  /* VoogStyle
    "pathI18n": ["product_list", "article_box", "normal"],
    "titleI18n": "font_style",
    "type": "button",
    "editor": "toggleIcon",
    "states": {
      "on": "italic",
      "off": "normal"
    },
    "icon": "italic",
    "scope": "global"
  */
  --product-box-font-style: normal;
  /* VoogStyle
    "pathI18n": ["product_list", "article_box", "normal"],
    "titleI18n": "text_decoration",
    "type": "button",
    "editor": "toggleIcon",
    "states": {
      "on": "underline",
      "off": "none"
    },
    "icon": "underline",
    "scope": "global"
  */
  --product-box-text-decoration: none;
  /* VoogStyle
    "pathI18n": ["product_list", "article_box", "normal"],
    "titleI18n": "text_transform",
    "type": "button",
    "editor": "toggleIcon",
    "states": {
      "on": "uppercase",
      "off": "none"
    },
    "icon": "uppercase",
    "scope": "global"
  */
  --product-box-text-transform: none;
  /* VoogStyle
    "pathI18n": ["product_list", "article_box", "normal"],
    "titleI18n": "color",
    "type": "button",
    "editor": "colorPicker",
    "featured": true,
    "scope": "global"
  */
  --product-list-box-color: rgba(0, 0, 0, 0.8);
}
