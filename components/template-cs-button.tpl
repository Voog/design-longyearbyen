:root {
  /* VoogStyle
    "pathI18n": ["button", "normal"],
    "titleI18n": "padding",
    "editor": "rangePicker",
    "min": 12,
    "max": 100,
    "step": 1,
    "unit": "px",
    "scope": "global"
  */
  --content-button-padding: 20px;
  /* VoogStyle
    "pathI18n": ["button", "normal"],
    "titleI18n": "size",
    "editor": "rangePicker",
    "min": 8,
    "max": 100,
    "unit": "px",
    "featured": true,
    "scope": "global"
  */
  --content-button-font-size: 18px;
  /* VoogStyle
    "pathI18n": ["button", "normal"],
    "titleI18n": "background_color",
    "editor": "colorPicker",
    "scope": "global"
  */
  --content-button-background-color: transparent;
  /* VoogStyle
    "pathI18n": ["button", "normal"],
    "titleI18n": "font_style",
    "type": "button",
    "editor": "toggleIcon",
    "states": {
      "on": "italic",
      "off": "normal"
    },
    "icon": "italic",
    "scope": "global"
  */
  --content-button-font-style: normal;
  /* VoogStyle
    "pathI18n": ["button", "normal"],
    "titleI18n": "text_decoration",
    "type": "button",
    "editor": "toggleIcon",
    "states": {
      "on": "underline",
      "off": "none"
    },
    "icon": "underline",
    "scope": "global"
  */
  --content-button-text-decoration: none;
  /* VoogStyle
    "pathI18n": ["button", "normal"],
    "titleI18n": "text_transform",
    "type": "button",
    "editor": "toggleIcon",
    "states": {
      "on": "uppercase",
      "off": "none"
    },
    "icon": "uppercase",
    "scope": "global"
  */
  --content-button-text-transform: uppercase;
  /* VoogStyle
    "pathI18n": ["button", "normal"],
    "titleI18n": "color",
    "type": "button",
    "editor": "colorPicker",
    "featured": true,
    "scope": "global",
    "boundVariables": [
      "--content-button-hover-color"
    ]
  */
  --content-button-color: #333;
  /* VoogStyle
      "pathI18n": ["button", "hover"],
      "titleI18n": "color",
      "type": "text",
      "editor": "colorPicker",
      "scope": "global"
    */
  --content-button-hover-color: #333;
}
